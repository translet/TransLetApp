<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayMessageActivity" tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/messages" tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="19dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="19dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="76dp" tools:layout_constraintLeft_creator="1" android:layout_marginBottom="76dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginRight="19dp" android:visibility="visible">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
    <TextView
            android:layout_width="58dp"
            android:layout_height="30dp"
            android:id="@+id/textUID"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toTopOf="@+id/messages"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="16dp"
            tools:layout_constraintLeft_creator="1" android:layout_marginBottom="31dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="19dp"/>
    <EditText
            android:layout_width="274dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/message"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/messages"
            android:visibility="visible"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_btn_speak_now"
            android:id="@+id/btnTalk"
            app:layout_constraintLeft_toRightOf="@+id/message"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:contentDescription=""/>
</android.support.constraint.ConstraintLayout>
