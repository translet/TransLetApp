<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="368dp"
            android:layout_height="40dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/layoutUid" android:layout_marginTop="8dp"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/tvuid" android:visibility="visible"
                android:background="?android:attr/colorButtonNormal" tools:targetApi="lollipop"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/layoutUid"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/layoutSessionInvite"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/tvSessionInfo" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="300dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutSessionInvite"
            app:layout_constraintBottom_toTopOf="@+id/btnCreateSession"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" android:id="@+id/layoutSessionAtt" android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="300dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutSessionInvite"
            app:layout_constraintBottom_toTopOf="@+id/btnCreateSession" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/layoutSessionAtt" android:layout_marginRight="8dp"
            android:id="@+id/layoutSessionInit" android:layout_marginEnd="8dp" android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp">
    </LinearLayout>
    <Button
            android:text="@string/start_new_session"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCreateSession"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>